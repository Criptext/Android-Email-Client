<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/criptextColorBackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="165dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/customize_step_1"
            android:textColor="?attr/criptextSecondaryTextColor"
            android:textSize="14sp"/>

        <TextView
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/customize_profile_picture_title"
            android:textColor="?attr/criptextPrimaryTextColor"
            android:textSize="24sp"/>

        <RelativeLayout
            android:layout_marginTop="59dp"
            android:id="@+id/pin_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:src="@drawable/img_profile"
                android:layout_centerInParent="true" />

            <ProgressBar
                android:padding="36dp"
                android:id="@+id/profile_picture_progress"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:textColor="?attr/criptextPrimaryTextColor"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/textViewName"
            fontPath="fonts/NunitoSans-Bold.ttf"/>

        <ProgressBar
            android:id="@+id/next_button_progress"
            android:visibility="gone"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/white"
            android:background="@drawable/btn_log_in"/>

        <Button
            android:id="@+id/next_button"
            android:layout_marginTop="71dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_log_in"
            android:textColor="@drawable/btn_sign_in"
            android:text="@string/btn_add"
            android:textSize="16sp"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/skip"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/btn_skip"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="?attr/criptextPrimaryTextColor"
            fontPath="fonts/NunitoSans-Bold.ttf"/>

    </LinearLayout>

</RelativeLayout>