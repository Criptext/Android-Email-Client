<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/viewNoMails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/envelope_opened"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:src="@drawable/search_happy"/>

    <TextView
        android:id="@+id/no_results_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="@string/no_history"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#9b9b9b"
        android:gravity="center_horizontal"
        android:text="@string/no_history_subtitle"
        fontPath="fonts/NunitoSans-Italic.ttf"/>

</LinearLayout>