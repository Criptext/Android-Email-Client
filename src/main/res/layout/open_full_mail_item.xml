<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPaddingLeft="20dp"
    card_view:cardPreventCornerOverlap="false"
    android:layout_marginHorizontal="-5dp"
    card_view:cardUseCompatPadding="true"  >
    <FrameLayout
        android:id="@+id/open_full_mail_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/email_header"
                    android:layout_height="wrap_content"
                    android:text="Gianni Carlo"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/to_me_4_others"
                    android:textColor="@color/full_mail_cc" />

                <TextView
                    android:id="@+id/email_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textColor="@color/full_mail_date" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="#89909a"
                        android:id="@+id/reply"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/reply_eliminar_esto" />

                    <ImageView
                        android:tint="#89909a"
                        android:id="@+id/more"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:src="@drawable/more2"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:background="@drawable/circle_attachment"
                        android:tint="@color/azure"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/attachment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/attachment" />
                    <ImageView
                        android:background="@drawable/circle_attachment"
                        android:tint="@color/azure"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/read"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/read_notification" />
                    <ImageView
                        android:background="@drawable/circle_attachment"
                        android:padding="5dp"
                        android:tint="@color/white"
                        android:backgroundTint="#dd4040"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/unsend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/un_sent" />

                    <com.github.ybq.android.spinkit.SpinKitView
                        android:visibility="gone"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/spin_kit_unsend"
                        android:background="@drawable/red_filled_circle"
                        style="@style/SpinKitView.Small.Circle"
                        android:padding="3dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:SpinKit_Color="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/full_mail_scroll">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.email.utils.ZoomLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/full_mail_zoom">

                        <WebView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email_body"
                            android:scrollbars="none"/>

                    </com.email.utils.ZoomLayout>

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:visibility="gone"
                android:id="@+id/email_preview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="70dip"
                android:text="@string/full_mail_item_open_default" />

            <include layout="@layout/open_full_mail_attachment"
                />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>

