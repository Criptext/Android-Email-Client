<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:paddingStart="20dp"
    android:layout_marginStart="-2dp"
    android:layout_marginEnd="-4dp"
    android:background="@drawable/partial_email_drawable">

    <FrameLayout
        android:id="@+id/open_full_mail_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/email_header"
                    android:layout_height="wrap_content"
                    android:text="Gianni Carlo"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/to_me_4_others"
                    android:textColor="@color/full_mail_cc" />

                <TextView
                    android:id="@+id/email_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textColor="@color/full_mail_date" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="#89909a"
                        android:id="@+id/reply"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:src="@drawable/reply" />

                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:src="@drawable/more_email"
                        android:tint="#89909a" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_my_email_options"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/circle_read"
                        android:tint="@color/azure"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/attachment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/attachment" />

                    <ImageView
                        android:background="@drawable/circle_read"
                        android:tint="@color/azure"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/read"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:src="@drawable/read" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/unsend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/circle_unsent_filled"
                        android:padding="7dp"
                        android:src="@drawable/un_sent"
                        android:tint="@color/white" />

                    <com.github.ybq.android.spinkit.SpinKitView
                        android:visibility="gone"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/spin_kit_unsend"
                        android:background="@drawable/red_filled_circle"
                        style="@style/SpinKitView.Small.Circle"
                        android:padding="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:SpinKit_Color="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_marginTop="85dp"
                android:layout_marginStart="-5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/full_mail_scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/progress_bar_webview_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.email.utils.ui.ZoomLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/full_mail_zoom">

                        <WebView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email_body"
                            android:scrollbars="none"/>

                    </com.email.utils.ui.ZoomLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:visibility="gone"
                android:id="@+id/email_preview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="70dip"
                android:text="@string/full_mail_item_open_default" />

            <!--<include layout="@layout/open_full_mail_attachment"/>-->

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

