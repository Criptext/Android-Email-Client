<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/contact_read_history_popup" >
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/attachment"
                android:tint="@color/azure"
                android:padding="15dp"
                android:layout_width="0dip"
                android:layout_weight="0.20"
                android:layout_height="fill_parent"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.80"
                android:layout_height="fill_parent"
                android:text="Attachment History"
                android:gravity="center_vertical"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/attachments_history_refresher"
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/attachments_history_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
