<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/email_contact_info_popup" >
        <LinearLayout
            android:id="@+id/from_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.20"
                android:layout_height="fill_parent"
                android:text="From:"
                android:gravity="center_vertical"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/from_name"
                android:layout_width="0dip"
                android:layout_weight="0.30"
                android:layout_height="fill_parent"
                android:text="Gianni Carlo"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/from_mail"
                android:layout_width="0dip"
                android:layout_weight="0.50"
                android:layout_height="fill_parent"
                android:text="@string/criptextdotcom"
                android:textColor="@color/azure"
                android:gravity="center_vertical"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_to_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.20"
                android:layout_height="fill_parent"
                android:text="Reply to:"
                android:gravity="center_vertical"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/reply_name"
                android:layout_width="0dip"
                android:layout_weight="0.30"
                android:layout_height="fill_parent"
                android:text="Gianni Carlo"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/reply_mail"
                android:layout_width="0dip"
                android:layout_weight="0.50"
                android:layout_height="fill_parent"
                android:text="@string/criptextdotcom"
                android:textColor="@color/azure"
                android:gravity="center_vertical"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/to_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:text="To:"
                android:gravity="center_vertical"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:textSize="17sp" />

            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/contacts_to_refresher"
                android:layout_width="0dip"
                android:layout_weight="0.80"
                android:layout_height="match_parent" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contacts_to_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.20"
                android:layout_height="fill_parent"
                android:text="Date:"
                android:gravity="center_vertical"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dip"
                android:layout_weight="0.30"
                android:layout_height="fill_parent"
                android:text="10:30 AM"
                android:gravity="center_vertical"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
