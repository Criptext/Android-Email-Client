<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:clickable="true"
    android:paddingBottom="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/accountItemAvatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/plusBadgeRing"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_ring_drawer"
            android:layout_row="0"
            android:layout_column="0"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:textColor="?attr/criptextPrimaryTextColor"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/textViewCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/criptextSecondaryTextColor"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="5dp"
                android:alpha="0.44"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <TextView
            android:id="@+id/badgeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:background="@drawable/badge_menu"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:layout_row="0"
            android:layout_column="2"/>

</GridLayout>