<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="48dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:src="@drawable/ic_arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:orientation="vertical">
        <TextView
            fontPath="fonts/NunitoSans-Regular.ttf"
            android:id="@+id/titleSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="?attr/criptextPrimaryTextColor"
            android:text="@string/import_mailbox_import_title"/>

        <TextView
            fontPath="fonts/NunitoSans-Regular.ttf"
            android:id="@+id/subTitleSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="?attr/criptextSecondaryTextColor"
            android:text="@string/import_mailbox_import_sub_title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/imageViewDevice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_rejectimport"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <TextView
            fontPath="fonts/NunitoSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textColor="?attr/criptextSecondaryTextColor"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/not_approved"/>

        <Button
            android:id="@+id/resend_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/btn_welcome_tour"
            android:textColor="@drawable/btn_sign_in"
            android:text="@string/sync_denied_btn"
            android:textAllCaps="false"
            android:textSize="16sp"/>
    </LinearLayout>


</RelativeLayout>