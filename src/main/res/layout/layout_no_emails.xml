<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/viewNoMails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/envelope_opened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inbox_light"/>

    <TextView
        android:id="@+id/no_results_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="?attr/criptextPrimaryTextColor"
        android:text="@string/no_mails"/>

    <TextView
        android:id="@+id/no_results_label_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#9b9b9b"
        android:gravity="center_horizontal"
        android:text="@string/no_mails_subtitle"
        android:layout_marginBottom="30dp"
        fontPath="fonts/NunitoSans-Italic.ttf"/>

</LinearLayout>