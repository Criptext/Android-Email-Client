<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="48dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:src="@drawable/ic_arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:orientation="vertical">
        <TextView
            fontPath="fonts/NunitoSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="?attr/criptextPrimaryTextColor"
            android:text="@string/sync_begin_title"/>

        <TextView
            fontPath="fonts/NunitoSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="?attr/criptextSecondaryTextColor"
            android:text="@string/sync_begin_sub_title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/imageViewDevice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_importlaptop"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resend_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/btn_welcome_tour"
        android:textColor="@drawable/btn_sign_in"
        android:text="@string/sync_begin_btn"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>